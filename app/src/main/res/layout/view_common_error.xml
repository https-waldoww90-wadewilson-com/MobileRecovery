<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/error_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/error_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/network_error_icon_height"
        android:layout_marginTop="@dimen/network_error_icon_margin_top"/>

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/network_error_icon_margin_bottom"
        android:gravity="center"
        android:text="@string/error_view_hint"
        android:textColor="@color/black_424659_alpha80"
        android:textSize="@dimen/text_size_m"/>
</LinearLayout>